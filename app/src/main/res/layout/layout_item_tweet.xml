<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivAvatar"
        android:contentDescription="@string/avatar_description"
        android:layout_marginTop="@dimen/tweet_vertical_margin"
        android:layout_marginLeft="@dimen/tweet_horizontal_margin"
        android:layout_width="@dimen/avatar_small_size"
        android:layout_height="@dimen/avatar_small_size"
        android:layout_marginRight="@dimen/avatar_margin_right"
        android:layout_marginEnd="@dimen/avatar_margin_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvUserScreenName"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivAvatar"
        android:layout_toRightOf="@+id/ivAvatar"
        android:layout_toEndOf="@+id/ivAvatar" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/tweet_vertical_margin"
        android:layout_marginRight="@dimen/tweet_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/tweet_horizontal_margin"
        android:layout_below="@+id/tvUserScreenName"
        android:layout_alignLeft="@+id/tvUserScreenName"
        android:layout_alignStart="@+id/tvUserScreenName" />

    <View
        android:layout_marginTop="@dimen/separator_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/tvText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>